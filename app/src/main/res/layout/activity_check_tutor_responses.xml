<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.test.campusconnect.checkTutorResponses">




        <ListView

            android:id="@+id/listResponses"
            android:cacheColorHint="#CCBBFFFF"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:fadingEdge="none"
            android:divider="@color/ColorPrimary"
            android:dividerHeight="2.0sp"
            android:background="@drawable/card_background_selector"></ListView>


    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/btnCloseResponses"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:padding="5pt"
        android:background="@drawable/button_default_bg"
        android:textColor="@color/ColorPrimary"></Button>

</RelativeLayout>