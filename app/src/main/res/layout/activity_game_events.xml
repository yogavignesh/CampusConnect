

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
android:background="@drawable/all_sports_banner"
    tools:context="com.example.test.campusconnect.GameEvents">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />



    <ListView
    android:id="@+id/lstEvents"
    android:cacheColorHint="#CCBBFFFF"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:fadingEdge="none"
    android:background="@drawable/card_background_selector"
    android:divider="@color/ColorPrimary"
    android:dividerHeight="2.0sp"
        android:alpha="0.85">

</ListView>

</LinearLayout>
