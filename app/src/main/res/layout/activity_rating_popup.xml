<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.test.campusconnect.Rating_Popup">

    <TextView

        android:text="Give your rating to this tutor"
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/ColorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:id="@+id/rateTitle"
        android:layout_height="wrap_content" />
    <TextView

        android:text="Give your rating to this tutor"
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/ColorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:id="@+id/rateValue"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <RatingBar
        android:id="@+id/ratingFunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rateTitle"
        android:numStars="5"
        android:layout_centerHorizontal="true"
        android:stepSize="0.2"
        android:progressTint="@color/star_color"
        android:progressBackgroundTint="@color/star_color"
        android:secondaryProgressTint="@color/star_color"/>
</RelativeLayout>
