<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.test.campusconnect.ShareCarComments">
    <TextView
        android:layout_width="match_parent"
        android:text="Are you sure you want to cancel this ride?"
        android:gravity="center"
        android:textColor="@color/ColorPrimary"
        android:layout_height="wrap_content"
        android:id="@+id/UjConfirmation"
        android:textSize="15sp"
        android:visibility="gone"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/txtWantCarComment"
        android:hint="Your Comment"
        android:textSize="15sp"
        android:textColor="@color/ColorPrimary"
        android:background="@drawable/edittext_default_bg"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/UjConfirmation"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get my location"
        android:id="@+id/getLoc"

        android:padding="5sp"
        android:onClick="onSearch"
        android:textColor="@color/ColorPrimary"
        android:background="@drawable/button_default_bg"
        android:layout_below="@+id/txtWantCarComment"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="location"
        android:textColor="@color/ColorPrimary"
        android:layout_height="match_parent"
        android:id="@+id/txtcurrLocation"
        android:layout_below="@+id/getLoc"
        />
    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Send Request"
    android:id="@+id/btnSendRideReq"
    android:textColor="@color/ColorPrimary"

        android:padding="5sp"
    android:background="@drawable/button_default_bg"
    android:layout_below="@+id/txtWantCarComment"
    android:layout_alignParentRight="true"
    />
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:padding="5sp"
        android:id="@+id/btnUjConfirmYes"
        android:textColor="@color/ColorPrimary"
        android:background="@drawable/button_default_bg"
        android:layout_below="@+id/UjConfirmation"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="No"
        android:padding="5sp"
        android:id="@+id/btnUjConfirmNo"
        android:textColor="@color/ColorPrimary"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_default_bg"
        android:layout_toRightOf="@+id/btnUjConfirmYes"
        android:layout_below="@+id/UjConfirmation"
      android:visibility="gone"
        />
</RelativeLayout>
