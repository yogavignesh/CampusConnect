<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent"
    tools:context="com.example.test.campusconnect.GameInvite"
    >
    <TextView
        android:id="@+id/rtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Message:"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textSize="19dp"
        android:textColor="@color/ColorPrimary"
        />
    <EditText
        android:id="@+id/rtxtRequest"
        android:textSize="17dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:hint="Your request message here:"
        android:lines="8"
        android:background="@drawable/edittext_top_bg"
        android:minLines="4"
        android:gravity="top|left"
        android:maxLines="15"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@id/rtMessage"
        />
    <Button
        android:id="@+id/rtbtnReq"
        android:textSize="25dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/rtxtRequest"
        android:layout_margin="4dp"
        android:alpha="0.76"
        style="@style/DefaultButtonText"
        android:background="@drawable/button_default_bg"
        android:text="Send Request"/>
    </RelativeLayout>