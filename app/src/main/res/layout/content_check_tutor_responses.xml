<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15sp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/counter_text_color"
    android:layout_margin="@dimen/activity_horizontal_margin"
    >
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textColor="@color/ColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/replyFrom"
        android:text="Reply from :"/>
        <TextView android:id="@+id/tResTutorName"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/ColorPrimary"
            android:layout_width="wrap_content"
            android:layout_below="@+id/replyFrom"
            android:layout_height="wrap_content"/>


        <TextView android:id="@+id/tDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorListItem"
        android:textSize="17sp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/tResTutorName"
        />

        <TextView android:id="@+id/tReplyStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/tDepartment"
            android:visibility="gone"
            />
    <TextView android:id="@+id/tReplyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/counter_text_bg"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/tReplyStatus"
        />



</RelativeLayout>