<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sb_orig"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/evnttitle">

    <TextView android:id="@+id/eventMessage"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/ColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/eventPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventMessage"/>
        <TextView android:id="@+id/hidden_sp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toEndOf="@id/evnttitle"
        >
        <TextView android:id="@+id/eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            />
    <TextView android:id="@+id/eventTime"
        android:layout_width="wrap_content"
        android:textColor="@color/ColorPrimary"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/eventDate"/>

        </LinearLayout>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnJoinEvent"
                android:text="Join"
                android:padding="15sp"
                android:layout_centerInParent="true"
                android:textColor="@color/ColorPrimary"
                android:background="@drawable/button_default_bg"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnEditEvent"
                android:layout_centerInParent="true"
                android:padding="15sp"
                android:text="Edit"
                android:textColor="@color/ColorPrimary"
                android:background="@drawable/button_default_bg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/txtGoing"
                android:text="Going"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:textColor="@color/ColorPrimary"
                android:background="#330099CC"
android:visibility="gone"
                />
        </RelativeLayout>


</RelativeLayout>