<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:padding="14dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/evnttitle">

          <TextView android:id="@+id/eventMessage"
            android:textSize="18sp"
            android:textColor="@color/tabsScrollColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/sbpostBy"
            android:textSize="17sp"
            android:textStyle="italic"
            android:textColor="@color/ColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView android:id="@+id/eventPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventMessage"
        android:textColor="@color/star_color"
        android:textSize="14sp"/>
        <TextView android:id="@+id/hidden_sp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toEndOf="@id/evnttitle"
        >
        <TextView android:id="@+id/eventDate"
        android:layout_width="wrap_content"
            android:textColor="@color/ColorPrimaryDark"
        android:layout_height="wrap_content"
            />
    <TextView android:id="@+id/eventTime"
        android:layout_width="wrap_content"
        android:textColor="@color/ColorPrimary"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/eventDate"/>

        </LinearLayout>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnJoinEvent"
                android:padding="15sp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/ColorPrimary"
                android:background="@drawable/join_icon"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnEditEvent"
                android:layout_alignParentBottom="true"
                android:padding="15sp"
                android:textColor="@color/ColorPrimary"
                android:background="@drawable/edit_icon"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnDeleteEvent"
                android:layout_alignParentBottom="true"
                android:padding="15sp"
                android:textColor="@color/ColorPrimary"
                android:background="@drawable/cancel_icon"
                android:visibility="gone"
                />
</LinearLayout>
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/txtGoing"
                android:background="@drawable/going_icon"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="italic"
                android:textSize="15sp"
android:visibility="gone"
                />
        </RelativeLayout>


</RelativeLayout>