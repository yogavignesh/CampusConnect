<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/book_stack"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/evnttitle">

        <TextView android:id="@+id/tName"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/ColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView android:id="@+id/hidden_dept_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView android:id="@+id/tExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tName"
            />
        <RatingBar
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:id="@+id/rtgTutor"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.2"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:progressTint="@color/star_color"
            android:progressBackgroundTint="@color/star_color"
            android:secondaryProgressTint="@color/star_color"

            />

            <TextView android:id="@+id/tSubjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_below="@+id/tExp"
            android:textColor="@color/ColorHeading"

            />



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/evnttitle">


        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request"
            android:id="@+id/btnTtrReq"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:padding="5pt"
            android:background="@drawable/button_default_bg"
            android:textColor="@color/ColorPrimary"></Button>
        <TextView android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Request"
            android:id="@+id/txtReqSent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="#993300FF"
            android:textColor="@color/ColorPrimary"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rateTutor"
            android:text="Rate this tutor"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="5pt"
            android:gravity="center_vertical"
            android:textColor="@color/ColorPrimary"


            />
    </RelativeLayout>


</RelativeLayout>